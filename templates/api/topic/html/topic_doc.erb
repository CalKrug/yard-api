<div class="api-resource">
  <article>
    <%= htmlify(@docstring) %>
  </article>

  <% c = options[:controllers].detect { |c| c.has_tag?(:note) } %>
  <% c && c.tags(:note).each do |tag| %>
    <blockquote class="note">
      <p><strong>Note</strong></p>
      <%= htmlify tag.text %>
    </blockquote>
  <% end %>

  <% unless options.all_resources %>
    <%= erb "endpoints" %>
  <% end %>

  <% if @json_objects.any? %>
    <%= erb "object_synopses" %>
  <% end %>
</div>
