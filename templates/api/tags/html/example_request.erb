<% if object.has_tag?(:example_request) %>
  <div class="examples">
    <% if object.tags(:example_request).length > 1 %>
      <h4>Example Requests:</h4>
    <% else %>
      <h4>Example Request:</h4>
    <% end %>

    <% object.tags(:example_request).each do |tag| %>
      <% title = tag.text.lines[0].strip =~ /^\/\/(.*)$/ && $1 %>
      <% text = tag.text %>
      <% if title %>
        <header class="example-title"><%= title.strip %></header>
        <% text = tag.text.lines.to_a[1..-1].join %>
      <% end %>
      <pre class="example code brush:js"><%= html_syntax_highlight(text, :plain) %></pre>
    <% end %>
  </div>
<% end %>
